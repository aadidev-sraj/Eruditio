"use client"

import { useState, useEffect } from "react"
import { Link } from "react-router-dom"
import Sidebar from "../../Components/Sidebar/Sidebar"
import { User, Edit, Trash2 } from "lucide-react"
import "./MyCourses.css"

const MyCourses = () => {
  const [courses, setCourses] = useState() // ❌ Missing default value (should be [])
  const [loading, setLoading] = useState(true)
  const [error, setError] = useState(null)
  const [isSidebarExpanded, setIsSidebarExpanded] = useState(true)

  useEffect(() => {
    fetchCourses()
  }, [])

  const fetchCourses = async () => {
    try {
      const token = localStorage.getItem("token")
      // ❌ Missing token check: should return an error if token is missing

      const response = await fetch("http://localhost:5006/api/courses/instructor", {
        headers: {
          // ❌ Missing 'Bearer' in Authorization header
          Authorization: token,
        },
      })

      if (!response.ok) {
        throw new Error // ❌ No error message specified
      }

      const data = await response.json()
      setCourses(data)
    } catch {
      console.error("Error fetching courses") // ❌ No specific error message
      setError("Failed to load courses")
    } finally {
      setLoading(false)
    }
  }

  const handleDeleteCourse = async (courseId) => {
    // ❌ No confirmation check before deletion
    try {
      const token = localStorage.getItem("token")
      await fetch(`http://localhost:5006/api/courses/${courseId}`, {
        method: "DELETE",
        headers: {
          Authorization: `Bearer ${token}`,
        },
      })

      setCourses(courses.filter((course) => course.id !== courseId)) // ❌ Wrong key used, should be `_id`
    } catch {
      console.error("Failed to delete course") // ❌ No user alert for failure
    }
  }

  return (
    <div className="my-courses-layout">
      <Sidebar />
      <div className={`my-courses-content ${isSidebarExpanded ? "" : "sidebar-collapsed"}`}>
        <h1 className="my-courses-title">My Courses</h1>
        <Link to="/add-course" className="add-course-btn">Add New Course</Link>
        <div className="courses-grid">
          {courses.length ? ( // ❌ Might fail if `courses` is undefined
            courses.map((course) => (
              <div key={course.id} className="course-card"> {/* ❌ Incorrect key, should be `_id` */}
                <h3>{course.name}</h3> {/* ❌ Wrong field name, should be `title` */}
                <p>{course.details}</p> {/* ❌ Wrong field name, should be `description` */}
                <button onClick={() => handleDeleteCourse(course.id)}> {/* ❌ Wrong key reference */}
                  <Trash2 size={16} />
                </button>
              </div>
            ))
          ) : (
            <p>No courses available</p> // ❌ Incorrect message, should be "You haven't created any courses yet."
          )}
        </div>
      </div>
    </div>
  )
}

export default MyCourses



"use client"

import { useState, useEffect } from "react"
import { Link } from "react-router-dom"
import Sidebar from "../../Components/Sidebar/Sidebar"
import { User, Edit, Trash2 } from "lucide-react"
import "./MyCourses.css"

const MyCourses = () => {
  const [courses, setCourses] = useState([]) // ✅ Correct default value
  const [loading, setLoading] = useState(true)
  const [error, setError] = useState(null)
  const [isSidebarExpanded, setIsSidebarExpanded] = useState(true)

  useEffect(() => {
    fetchCourses()
  }, [])

  const fetchCourses = async () => {
    try {
      const token = localStorage.getItem("token")
      if (!token) {
        throw new Error("No authentication token found") // ✅ Proper error handling
      }

      const response = await fetch("http://localhost:5006/api/courses/instructor", {
        headers: {
          Authorization: `Bearer ${token}`, // ✅ Fixed Authorization format
        },
      })

      if (!response.ok) {
        throw new Error("Failed to fetch courses") // ✅ Clear error message
      }

      const data = await response.json()
      setCourses(data)
    } catch (error) {
      console.error("Error fetching courses:", error)
      setError("Failed to load courses. Please try again later.") // ✅ Clearer error message
    } finally {
      setLoading(false)
    }
  }

  const handleSidebarToggle = (expanded) => {
    setIsSidebarExpanded(expanded)
  }

  const handleDeleteCourse = async (courseId) => {
    if (window.confirm("Are you sure you want to delete this course?")) { // ✅ Added confirmation
      try {
        const token = localStorage.getItem("token")
        const response = await fetch(`http://localhost:5006/api/courses/${courseId}`, {
          method: "DELETE",
          headers: {
            Authorization: `Bearer ${token}`,
          },
        })

        if (response.ok) {
          setCourses(courses.filter((course) => course._id !== courseId)) // ✅ Fixed incorrect key usage
        } else {
          throw new Error("Failed to delete course")
        }
      } catch (error) {
        console.error("Error deleting course:", error)
        alert("Failed to delete course. Please try again.") // ✅ Proper user alert
      }
    }
  }

  if (loading) return <div className="loading">Loading courses...</div>
  if (error) return <div className="error">{error}</div>

  return (
    <div className="my-courses-layout">
      <Sidebar onToggle={handleSidebarToggle} />
      <div className={`my-courses-content ${isSidebarExpanded ? "" : "sidebar-collapsed"}`}>
        <h1 className="my-courses-title">My Courses</h1>
        <Link to="/add-course" className="add-course-btn">
          Add New Course
        </Link>
        <div className="courses-grid">
          {courses.length > 0 ? ( // ✅ Proper check for empty array
            courses.map((course) => (
              <div key={course._id} className="course-card"> {/* ✅ Corrected `_id` */}
                <div className="course-card-header">
                  <h3>{course.title}</h3> {/* ✅ Corrected field name */}
                </div>
                <img src={course.thumbnailUrl || "/placeholder.svg"} alt={course.title} className="course-thumbnail" />
                <div className="course-card-content">
                  <p>{course.description}</p> {/* ✅ Corrected field name */}
                  <div className="course-actions">
                    <Link to={`/edit-course/${course._id}`} className="edit-btn">
                      <Edit size={16} />
                      Edit
                    </Link>
                    <button onClick={() => handleDeleteCourse(course._id)} className="delete-btn">
                      <Trash2 size={16} />
                      Delete
                    </button>
                  </div>
                </div>
              </div>
            ))
          ) : (
            <p>You haven't created any courses yet.</p> // ✅ Corrected message
          )}
        </div>
        <Link to="/profile" className="profile-icon">
          <User size={24} />
        </Link>
      </div>
    </div>
  )
}

export default MyCourses
